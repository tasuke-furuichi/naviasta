<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@map) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :status, 'Status' %>
          <%= f.text_field :status, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :language, 'Language' %>
          <%= f.text_field :language, class: 'form-control'%>
        </div>
        
        <%= f.submit 'create', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'maps/maps', maps: @maps %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>welcome to naviasta</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <div>
        <%= link_to 'login?', login_path%>
      </div>
    </div>
    
  </div>
<% end %>


